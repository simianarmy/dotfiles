function gcobr {
  IFS=$'\n'
  branches=($(git branch | grep $1 | awk '{$1=$1};1'))
  if [ $ZSH_VERSION ]; then
    setopt sh_word_split
  fi
  count=0
  for item in $branches
  do
    count=$((count+1))
    echo "${count}. $item"
  done

  if [ $count -gt 1 ]; then
    echo ""
    vared -p "Select branch #: " -c selection
    branch=$branches[$selection]
  else
    branch=$branches
  fi

  if [ -n "$branch" ]; then
    echo "git checkout ${branch}"
    git checkout $branch
  fi
}

